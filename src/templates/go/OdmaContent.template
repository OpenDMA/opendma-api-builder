package OpenDMAApi

import (
	"io"
)

// Represents the Content data type in OpenDMA.
// Provides access to the content stream and its size.
type OdmaContent interface {

    // Returns the stream to access the content's binary data.
    GetStream() (io.Reader, error)

    // Returns the size of the content in bytes.
    GetSize() (int64, error)

}
